{{#if fail}}<div class='alert alert-danger'>Email or password does not match. Please try again.</div>{{/if}}
<div class="container-fluid">
<div class="container bg-4 text-center">
  <h3>Reset Password</h3>
  <form method="POST" action="/reset/{{key}}" name="resetpass">
    <input type='hidden' name='passwordreset' value='true'>
    <div class="row delete">
    <div class="col-lg-6">
        <label><strong>Email Address </strong></label>
    </div>
    <div class="col-lg-6">
      <div class='input-bar'>
        <input type="email" name="login" style='width 276px;'>
      </div>
    </div>
   </div>
   <div class="row delete">
    <div class="col-lg-6">
        <label><strong>New Password </strong></label>
    </div>
    <div class="col-lg-6">
      <div class='input-bar'>
        <input type="password" name="newpassword" style='width 276px;'>
      </div>
    </div>
   </div>
   <div class="row delete">
    <div class="col-lg-6">
        <label><strong>Confirm Password </strong></label>
    </div>
    <div class="col-lg-6">
      <div class='input-bar'>
        <input type="password" name="confirmpassword" style='width 276px;'>
      </div>
    </div>
   </div>
    <input type='submit' class="btn btn-primary" value='Submit'>
  </form>
</div>
</div>