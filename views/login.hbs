<div class='jumbotron'>
  {{#if fail}}<p class='fail'>Username and password did not match. Please try again.</p>{{/if}}
  {{#if not_email}}<p>Please enter a valid email address</p>{{/if}}
  <form action="/login" method="POST">
    <label>Username:</label>
    <input type="text" name="login">
    <label>Password:</label>
    <input name='password' type='password'><br><br>
    <button class="btn btn-primary" type="submit">Log In</button>
  </form>
  <a href=''>No account? Create one here.</a> <br> <br>
</div>
